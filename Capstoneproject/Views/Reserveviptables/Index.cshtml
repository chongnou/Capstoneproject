@model IEnumerable<Capstoneproject.Models.Reserveviptable>

@{
    ViewBag.Title = "Index";
}

<h2>Reserved VIP</h2>


@using (Html.BeginForm())
{
    <p>
        Search: @Html.TextBox("SearchString")
        <input type="submit" value="Search" />
    </p>
}


@if (ViewContext.HttpContext.User.IsInRole("Admin"))
{
    <p>
        @Html.ActionLink("Create VIP", "Create")
    </p>
}
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BarName)
            </th>
            @if (ViewContext.HttpContext.User.IsInRole("Admin"))
            {
                <th>
                    @Html.DisplayNameFor(model => model.PhoneNumber)
                </th>
            }
            <th>
                @Html.DisplayNameFor(model => model.PartySize)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BarName)
                </td>
                @if (ViewContext.HttpContext.User.IsInRole("Admin"))
                {
                    <td>
                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                    </td>
                }
                <td>
                    @Html.DisplayFor(modelItem => item.PartySize)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                @if (ViewContext.HttpContext.User.IsInRole("Admin"))
                {
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                }
            </tr>
        }

    </table>
