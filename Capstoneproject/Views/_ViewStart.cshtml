@{
    string layout = "";
    if (User.IsInRole("Admin"))
    {
        layout = "~/Views/Shared/Admin.cshtml";
    }
    else if (User.IsInRole("Customer"))
    {
        layout = "~/Views/Shared/Customer.cshtml";
    }
    else
    {
        layout = "~/Views/Shared/_Layout.cshtml";
    }
    Layout = layout;
}